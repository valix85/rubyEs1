<p id="notice"><%= notice %></p>

<h1>Listing Contents</h1>

<table>
  <thead>
    <tr>
      <th>Titolo</th>
      <th>Descrizione</th>
      <th>User_id</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.titolo %></td>
        <td><%= content.descrizione %></td>
        <td><%= content.user.name if content.user %></td><!-- permette di saltare se non c'Ã¨ il valore e non genera errore -->
        <td><%= content.price %></td> 
        <td><%= link_to 'Mostra', content %></td>
        <% if content.user == current_user %>
          <td><%= link_to 'Modifica', edit_content_path(content) %></td>
          <td><%= link_to 'Cancella', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


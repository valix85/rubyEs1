<%= form_for @content, html: { multipart: true } do |f| %>
  <% if @content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% @content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
     <%= f.label :"Carica il contenuto che vuoi vendere" %><br>
     <%= f.file_field :allegato %>
  </div>
<br>
  <div class="field">
    <%= f.label :titolo %><br>
    <%= f.text_field :titolo %>
  </div>
  <div class="field">
    <%= f.label :descrizione %><br>
    <%= f.text_area :descrizione, class:"materialize-textarea" %>
  </div>
  <div class="field">
    <%= f.label :prezzo_min_50_cent %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
     <%= f.label :cover %><br>
     <%= f.file_field :cover %>
  </div>

  <br>

  <hr>
  <br>
  <div class="actions">
    <%= f.submit "SALVA", class:"btn btn-form" %>
  </div>
  <br>
<% end %>
